    <script>
        const toggleBtn = document.querySelector('.toggleBtn');
        const navLinks = document.getElementById('nav-links');
        const dropDownMenu = document.querySelector('.drop-down-menu');
        const menuIcon = document.querySelector('.ri-menu-line');
        const closeIcon = document.querySelector('.ri-close-large-line');
        
        toggleBtn.onclick = () => {
            dropDownMenu.classList.toggle('open');
            const isOpen = dropDownMenu.classList.contains('open');
            if (isOpen) {
                menuIcon.style.display = 'none';
                closeIcon.style.display = 'block';
            } else {
                menuIcon.style.display = 'block';
                closeIcon.style.display = 'none';
            }
        }

        
        const faqData = [
        {
                question: "How to register in Aadhar2.0",
                answer: 'Click on the "Register Now" button at the page, fill in the required details',
            },
            {
                question: "What is the registration fee for the Aadhar?",
                answer: 'There is no registration fee,It is Free for all to participate and Inovate',
            },
            {
                question: "Who can participate in Aadhar2.0",
                answer: 'The Aadhar2.0 is open to all 1st Year and 2nd Year students of Sistec ',
            },
            {
                question: "Where can I find more informations",
                answer: 'Co-ordinate to your Mentor for More Information',
            }
        ];

        const faqContainer = document.getElementById('faq-container');

        faqData.forEach((item, index) => {
            const faqItem = document.createElement('div');
            faqItem.classList = "transition-all duration-200 bg-white border border-gray-200 cursor-pointer hover:bg-gray-50";

            faqItem.innerHTML = `
                <button type="button" class="flex items-center justify-between w-full px-4 py-5 sm:p-6 " onclick="toggleFaq(${index})">
                    <span class="flex text-lg font-semibold text-black"> ${item.question} </span>
                    <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
                <div id="faq-answer-${index}" class="faq-answer px-4 pb-5 sm:px-6 sm:pb-6">
                    <p>${item.answer}</p>
                </div>
            `;

            faqContainer.appendChild(faqItem);
        });

        function toggleFaq(index) {
            faqData.forEach((item, i) => {
                const answerElement = document.getElementById(`faq-answer-${i}`);
                if (i === index) {
                    const isOpen = answerElement.classList.contains('block');
                    answerElement.classList.toggle('block', !isOpen);
                } else {
                    answerElement.classList.remove('block');
                }
            });
        }
    
